<!DOCTYPE html>
<html>
    <head>

    </head>

    <script type="text/javascript">

        function binary_convert()
        {
            var bits = [];
            var dividend = document.getElementById("txtDec");
            var remainder = 0;

            while (dividend >= 2)
            {
                remainder = dividend % 2;
                bits.push(remainder);
                dividend = (dividend - remainder) / 2;
            }

            bits.push(dividend);
            bits.reverse();
            process.stdout.write(bits);

        }
    </script>

    <body>

        <input type="number" id="txtDec" />
        <button onclick="binary_convert()">Convert</button>
    </body>




</html>
